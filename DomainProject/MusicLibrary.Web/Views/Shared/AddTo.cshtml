@model MusicLibrary.Web.Models.AddTrackToNewPlaylistViewModel

<div class="modal fade" id="addToPlaylistModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding-bottom: 0;">
                <ul class="nav nav-tabs nav-justified" >
                    <li class="active">
                        <a data-toggle="tab" href="#existing" style="border-bottom: 0 solid #FFF;">Add to existing playlists</a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#create" style="border-bottom: 0 solid #FFF;">Create new playlist</a>
                    </li>
                </ul>
            </div>
            <div class="modal-body ">
                <div class="tab-content">
                    <div id="existing" class="tab-pane fade in active list-group container-fluid" style="padding: 0; margin-bottom: 0;">
                        <div class="loader"></div>
                    </div>
                    <div id="create" class="tab-pane fade in container-fluid text-center">
                        @using (Html.BeginForm("AddToNewPlaylist", "Playlist", FormMethod.Post, new{@class="post-using-ajax"}))
                        {
                            @Html.HiddenFor(m=>m.TrackId)
                            @Html.TextBoxFor(m => m.NewPlaylistName, new { placeholder = "Playlist name", @class="form-control", style="display: inline-block;"})
                            <button id="newPlaylistButton" type="submit" class="btn btn-default">Save</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>