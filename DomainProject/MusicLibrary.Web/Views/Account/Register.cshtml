@model MusicLibrary.Web.Models.Identity.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Register</h2>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form-horizontal"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m => m.Alias, new {@class = "control-label col-sm-3"})
            @Html.TextBoxFor(m => m.Alias, new {@class = "form-control col-sm-9" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new {@class = "control-label col-sm-3"})
            @Html.TextBoxFor(m => m.UserName, new {@class = "form-control col-sm-9" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new {@class = " control-label col-sm-3"})
            @Html.TextBoxFor(m => m.Email, new {@class = "form-control col-sm-9", type = "email", placeholder = "name@example.com"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new {@class = "control-label col-sm-3"})
            @Html.PasswordFor(m => m.Password, new {@class = "form-control col-sm-9" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-label col-sm-3"})
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control col-sm-9" })
        </div>
        <div class="form-group">
            <label class="checkbox col-sm-offset-3 col-sm-9">
                @Html.CheckBoxFor(m => m.RecievesEmailNotifications, new {@checked = "checked"})
                @Html.DisplayNameFor(m => m.RecievesEmailNotifications)
            </label>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-default">Register</button>
            </div>
        </div>
    }
</div>